@using LMB.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<style>
    body {
        background-color: darkblue;
    }

    .logo {
        width: 575px;
        height: 300px;
        margin: 0 auto 10px;
        display: block;
    }

    #LoginDiv {
        display: block;
        background-color: lightgrey;
    }

    #forgot {
        margin-top: -19px;
        margin-left: 273px;
    }

    #loginForm {
        margin-left: 314px;
        display: block;
    }
</style>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<div class="row">
    <div class="col-md-8">

        <section id="loginForm">

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <img id="profile-img" class="logo" src="~/img/Logo1.JPG" />
                <br />
                <div id="LoginDiv">
                    <br />
                    <p>
                        @Html.Label("Login to our site")
                    </p>
                    <p>
                        @Html.Label("Enter your username and password to log on:")
                    </p>
                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                            <div id="forgot">
                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Sign In" id="btnLogin" class="btn btn-lg btn-primary btn-block btn-signin" width="10" height="10" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Create new User", "Create", "UserDBS")
                    </p>
                    <br />
                </div>


            }

        </section>


    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

}

