@model LMB.Models.BridgeSummaryComponent

@{
    ViewBag.Title = "CreateBS";
}

<h2>Bridge Summary Sheet</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
         <hr />
        @Html.HiddenFor(model => model.IdInspection)

        <div class="form-group">
            @Html.LabelFor(model => model.IdRating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("InspectionRaiting", null, "[Select Option]", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdRating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InvH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.InvH)
                    @Html.ValidationMessageFor(model => model.InvH, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.InvHS, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InvHS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InvHS, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InvHS, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InvHS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InvHS, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            @Html.LabelFor(model => model.OpH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.OpH)
                    @Html.ValidationMessageFor(model => model.OpH, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OpHS, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.OpHS)
                    @Html.ValidationMessageFor(model => model.OpHS, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "IndexBS", new { id = Model.IdInspection }) 
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

    $(document).ready(function () {
        $("#add").click(function () {
            var idRating = $("#IdRating").val();
            var invH = $("#InvH").val();
            var invHS = $("#InvHS").val();
            var opH = $("#OpH").val();
            var opHS = $("#OpHS").val();

            var idinsp = $("#IdInspection").val();
            if (description != "" || owner != "") {
            var Url = '@Url.Action("SaveCS", "Done")';
                $.post(Url, { "IdInspection": idinsp, "IdRating": idRating, "InvH": invH, "InvHS": invHS, "OpH": opH, "OpHS": opHS })
               .done(function (data) {
                   swal('Info', 'Success', 'success');
               })
               .fail(function (xhr, status, error) {
                   swal('Error', xhr.responseText, 'error');
               });
            }
        });
    });

    </script>
}